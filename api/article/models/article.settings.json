{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "edition": {
      "model": "edition",
      "via": "articles"
    },
    "author": {
      "model": "author",
      "via": "articles"
    },
    "articleCardImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "Galery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "template": {
      "type": "enumeration",
      "enum": [
        "template1",
        "template2",
        "template3"
      ],
      "default": "template1"
    },
    "quotes": {
      "type": "component",
      "repeatable": false,
      "component": "quote.quotes"
    },
    "saibamais": {
      "type": "text"
    },
    "entrevistado": {
      "model": "entrevistado",
      "via": "articles"
    }
  }
}
